<datasources xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://www.ironjacamar.org/doc/schema"
	xsi:schemaLocation="http://www.ironjacamar.org/doc/schema http://www.ironjacamar.org/doc/schema/datasources_1_1.xsd">
	<datasource jndi-name="datasource/mysql/dgss-test" pool-name="MySQLPool">
		<connection-url>jdbc:mysql://localhost:3306/dgss-test</connection-url>
		<driver>mysql-connector-java-${mysql.version}.jar</driver>
		<pool>
			<max-pool-size>30</max-pool-size>
		</pool>
		<security>
			<user-name>dgss</user-name>
			<password>dgss</password>
		</security>
	</datasource>
</datasources>
